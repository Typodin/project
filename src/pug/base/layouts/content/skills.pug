mixin skills(item)
  .skills-item
    .skills-item-wrap
      h3.skills-item-title= item.title
      span.skills-item-place= item.place
      span.skills-item-text= item.text

section.section-padding.bg-grey
  .container
    .skills.mb-60
      .skills-col
        +pagetitle('1998 - 2010', 'Education<br>Quality', 'mb-60')
        .skills-col-list
          - for (var x = 0; x < 3; x++)
            +skills(skillsList[x])
      .skills-col
        +pagetitle('2010 - 2022', 'Job<br>Experience', 'mb-60')
        .skills-col-list
          - for (var x = 3; x < 6; x++)
            +skills(skillsList[x])
    +disclaymer('Warning. All information about education and experience is demo only.', 'text-center')
