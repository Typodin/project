mixin input(label, labelClass, inputType, inputName, inputClass, placeholder)
  if (label !== '_label')
    label.f-label(class= ((labelClass === '_labelClass') ? '' : labelClass))= label
  input(
    type= inputType
    value=''
    name= inputName
    class= ((inputClass === '_inputClass') ? '' : inputClass)
    placeholder= ((placeholder === '_placeholder') ? '' : placeholder)
  )

