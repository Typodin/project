mixin textarea(label, tName, placeholder, rowsNum)
  if (label !== '_label')
    label.f-label= label
  textarea(
    name= tName
    placeholder= ((placeholder === '_placeholder') ? '' : placeholder)
    rows= ((rowsNum === '_rowsNum') ? '' : rowsNum)
  )

