mixin top(title, subtitle, text, link, linkTitle, img, classes)
  section.top(class= classes)
    .container
      .top-wrap
        .top-content
          h1.top-content-title !{title}
          if (subtitle !== '')
            h2.top-content-subtitle !{subtitle}
          if (text !== '')
            .top-content-text
              span= text
          if (link !== '')
            a.link-underline(href= link)= linkTitle
        .top-image
          img(src= img alt= !{title} loading="lazy")

